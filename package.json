{
  "$schema": "http://json.schemastore.org/package",
  "name": "ng-repo",
  "version": "1.0.0",
  "description": "angular study docs",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "lint-md": "lint-md .",
    "lint-md:fix": "lint-md --fix .",
    "eclint": "bash -c 'env eclint check $(git ls-files)'",
    "eclint:fix": "bash -c 'env eclint fix $(git ls-files)'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --list-different",
      "lint-md --fix"
    ],
    "*.{css,less}": [
      "stylelint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wzh327083434/ng-repo.git"
  },
  "keywords": [
    "angular",
    "typescript",
    "vuepress"
  ],
  "author": "wuzhihao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wzh327083434/ng-repo/issues"
  },
  "homepage": "https://github.com/wzh327083434/ng-repo#readme",
  "devDependencies": {
    "codelyzer": "^5.2.1",
    "eclint": "^2.8.1",
    "exec-extra": "2.4.0",
    "husky": "^4.2.1",
    "lint-md-cli": "^0.1.2",
    "lint-staged": "^10.0.7",
    "prettier": "1.19.1",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2",
    "tslint": "5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.7.5",
    "vuepress": "^1.3.0"
  }
}
